---
import PageLayout from "@/layouts/Base";
import { Image } from "@astrojs/image/components";
import aboutImg from "../assets/about-astro.png";

const meta = {
	title: "About",
	description: "I'm a starter theme for Astro",
};
---

<PageLayout meta={meta}>
	<div class="space-y-6">
		<h1 class="title">About</h1>
		<p>
			My Chinese name is Su Yirong, and my English name is davirain. 
			I am currently a part-time graduate student at East China Normal University and I work at Octopus Network. 
			My main research direction is related to blockchain, and I am interested in Rust language, web3, NFT, and blockchain.
		</p>
		<div class="flex justify-center">
			<Image src={aboutImg} alt="A cartoon cactus looking at 'Astro.build' logo"
			/>
		</div>
	</div>
</PageLayout>
