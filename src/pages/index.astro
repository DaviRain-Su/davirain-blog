---
import PageLayout from "@/layouts/Base";
import BlogPostPreview from "@/components/BlogPostPreview";
import SocialList from "@/components/SocialList";
import { sortMDByDate } from "@/util";
import type { Post } from "@/types";

const meta = {
	title: "Davirain's blog",
	description: "This is my blog.",
};

const MAX_POSTS = 10;
const allPosts = await Astro.glob<Post>("./posts/*.mdx");
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={meta}>
	<section>
		<h1 class="mb-6 title">Hello World!</h1>
		<p class="mb-4">
			My Chinese name is Su Yirong, and my English name is davirain.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="mb-4 text-xl title">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-wrap items-center gap-x-2 [&_q]:w-full">
						<BlogPostPreview post={p} as="h2" />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-16">
		<h2 class="mb-4 text-xl title">My projects or Iinvolved in maintaining</h2>
		<ul class="space-y-4 sm:space-y-2">
			<li>
				<a
					href="https://github.com/octopus-network/substrate-ibc.git"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-block cactus-link"
					>substrate-ibc
				</a>:
				<p class="inline-block sm:mt-2">IBC protocol implemented by substrate pallet.</p>
			</li>
			<li>
				<a
					href="https://github.com/DaviRain-Su/monkey-interpter.git"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-block cactus-link"
					>Monkey interpeter
				</a>:
				<p class="inline-block sm:mt-2">
					Monkey language interpreter Rust language implementation.
				</p>
			</li>
			<li>
				<a
					href="https://github.com/DaviRain-Su/algorithms.git"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-block cactus-link"
					>algorithms
				</a>:
				<p class="inline-block sm:mt-2">
					Introduction to algorithms thrid edition implement by rust, rescript.
				</p>
			</li>
			<li>
				<a
					href="https://github.com/DaviRain-Su/blockchain-tourtials.git"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-block cactus-link"
					>blockchain-tourtials
				</a>:
				<p class="inline-block sm:mt-2">block chain tech tourtials</p>
			</li>
		</ul>
	</section>
</PageLayout>
